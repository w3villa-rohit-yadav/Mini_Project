<!-- app/views/payments/success.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>Payment Successful</title>
  <%= stylesheet_link_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
        <h4 class="mb-0">Payment Successful</h4>
      </div>
      <div class="card-body text-center">
        <p>Thank you for your payment!</p>
        <p>Your payment was successful, and your account has been upgraded to the <strong><%= @plan.capitalize %> Plan</strong>.</p>
        <a href="<%= root_path %>" class="btn btn-primary mt-3">Go to Homepage</a>
      </div>
    </div>
  </div>
</div>
</div>
</body>
</html> 
